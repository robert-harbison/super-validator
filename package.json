{
	"name": "super-validator",
	"version": "1.0.0",
	"description": "A customizable lightweight schema validator for NodeJS that is designed for use with both frontend and backend projects.",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"jsnext:main": "dist/index.es.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "husky install",
		"prepublish": "npm run test && npm run build",
		"build": "rollup -c rollup.config.js",
		"lint": "eslint ./lib --ext .ts",
		"test": "npm run build && jest",
		"test:coverage": "npm run build && jest --collectCoverage"
	},
	"keywords": [
		"validator",
		"validate",
		"schema"
	],
	"author": "Robert Harbison",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^21.0.0",
		"@rollup/plugin-node-resolve": "^13.0.5",
		"@types/jest": "^27.0.2",
		"@types/merge-deep": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"eslint": "^7.32.0",
		"husky": "^7.0.2",
		"jest": "^27.2.3",
		"lint-staged": "^11.1.2",
		"prettier": "^2.4.1",
		"rollup": "^2.58.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"ts-jest": "^27.0.5",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"merge-deep": "^3.0.3",
		"tslib": "^2.3.1"
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	}
}
