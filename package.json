{
	"name": "super-validator",
	"version": "1.0.0",
	"description": "A customizable lightweight validator for NodeJS that is designed for use with both frontend and backend projects.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prepare": "husky install",
		"prepublish": "npm run test && npm run build",
		"build": "tsc",
		"lint": "eslint ./lib --ext .ts",
		"test": "jest",
		"test:coverage": "jest --collectCoverage"
	},
	"keywords": [
		"validator",
		"validate",
		"schema"
	],
	"author": "Robert Harbison",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"eslint": "^7.32.0",
		"husky": "^7.0.2",
		"jest": "^27.2.3",
		"lint-staged": "^11.1.2",
		"prettier": "^2.4.1",
		"ts-jest": "^27.0.5",
		"typescript": "^4.4.3"
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	}
}
